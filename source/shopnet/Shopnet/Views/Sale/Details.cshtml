@model Shopnet.ViewModels.SaleViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Sale</legend>

    <div id="product-details">
    <div class="display-label"><em>Customer</em></div>
    <div class="display-field">
        <p>@Html.DisplayFor(model => model.Sale.Customer.Name)</p>
    </div>

    <div class="display-label"><em>Type Payment</em></div>
    <div class="display-field">
        <p>@Html.DisplayFor(model => model.Sale.TypePayment.Name)</p>
    </div>

    <div class="display-label"><em>User</em></div>
    <div class="display-field">
        <p>@Html.DisplayFor(model => model.Sale.User.Name)</p>
    </div>

    <div class="display-label"><em>Creation</em></div>
    <div class="display-field">
        <p>@Html.DisplayFor(model => model.Sale.Creation)</p>
    </div>

    <div class="display-label"><em>Total</em></div>
    <div class="display-field">
        <p>@String.Format("{0:F}", Model.Sale.Total)</p>
    </div>
    </div>

    <table>
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Price (each)
        </th>
        <th>
            Quantity
        </th>
        <th>
            Subtotal
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.Details)
    {
        <tr id="row-@item.SaleID-@item.ProductID">
            <td>
                @item.Product.Name
            </td>
            <td>
                @String.Format("{0:F}", item.Price)
            </td>
            <td>
                @item.Amount
            </td>
            <td>
                @String.Format("{0:F}", item.Amount * item.Price)
            </td>
            <td></td>
        </tr>
    }
    <tr>
        <td>
            Total
        </td>
        <td>
        </td>
        <td>
        </td>
        <td>
        </td>
        <td>
            @String.Format("{0:F}", Model.Sale.Total)
        </td>
    </tr>
</table>

</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Sale.SaleID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
