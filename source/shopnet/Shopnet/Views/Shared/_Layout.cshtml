<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    @RenderSection("Scripts", false)
</head>

<body>
<div id="header">
<h1>
Shop Net</h1>
<ul id="navlist">

@if (HttpContext.Current.User.Identity.IsAuthenticated )
{
    Html.RenderAction("ItemList", "MenuItem"); 
  //  Html.RenderAction("Create", "UserController"); 
}else
{
   <li class="first"><a href="@Url.Content("~")" id="current">Home</a></li>
    <li><a href="@Url.Content("~/BasicPage/About")">About</a></li>
    <li><a href="@Url.Content("~/Provider/")">Provider</a></li>
    <li><a href="@Url.Content("~/Product/")">Product</a></li>
    <li><a href="@Url.Content("~/User/")">User</a></li>
    <li><a href="@Url.Content("~/Customer/")">Customer</a></li>
    <li><a href="@Url.Content("~/Sale/")">Sale</a></li>
    <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
    <li><a href="@Url.Content("~/Purchase/")">Purchase</a></li>
    <li><a href="@Url.Content("~/Payment/")">Payment</a></li>
    <li><a href="@Url.Content("~/TypePayment/")">Type Payment</a></li>
    {Html.RenderAction("AccountSummary", "Account");}
}


    
</ul>
</div>

    <div id="main">
        @RenderBody()
    </div>
    <style type="text/css">
        @RenderSection("Styles", false)
    </style>
    <div id="footer">
        Built and developed for <a href="http://encens.com.bo">ENCENS SRL</a>
    </div>
</body>
</html>
